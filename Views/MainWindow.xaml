<Window x:Class="CADTR.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CAD Text Reader" 
        Height="800" 
        Width="1200"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ToolbarButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{TemplateBinding Content}"
                                         Margin="5,0"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Styles -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="VerticalGridLinesBrush" Value="#E0E0E0"/>
        </Style>

        <!-- TreeView Styles -->
        <Style TargetType="TreeView">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Top Toolbar -->
        <ToolBarTray DockPanel.Dock="Top" Background="#FFFFFF">
            <ToolBar Background="Transparent" BorderThickness="0">
                <Button x:Name="btnLoadDXF" 
                        Content="ðŸ“‚ Load DXF" 
                        Style="{StaticResource ToolbarButton}"
                        Click="btnLoadDXF_Click"/>
                
                <Button x:Name="btnZoomToExtent" 
                        Content="ðŸ” Zoom to Extent" 
                        Style="{StaticResource ToolbarButton}"
                        Click="btnZoomToExtent_Click"/>

                <Separator/>
                
                <TextBlock Text="Status: " 
                         VerticalAlignment="Center" 
                         Margin="10,0"/>
                <TextBlock x:Name="StatusTextBlock" 
                         Text="Ready" 
                         VerticalAlignment="Center" 
                         FontWeight="SemiBold"/>
            </ToolBar>
        </ToolBarTray>

        <!-- Main Content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Canvas Area -->
            <Border Grid.Column="0" 
                    Background="#333333" 
                    Margin="10"
                    CornerRadius="4">
                <Canvas x:Name="drawingCanvas" 
                        ClipToBounds="True"
                        Background="Transparent"
                        MouseWheel="Canvas_MouseWheel"
                        PreviewMouseDown="Canvas_PreviewMouseDown"
                        PreviewMouseUp="Canvas_PreviewMouseUp"
                        MouseMove="Canvas_MouseMove">
                    <Canvas.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Canvas.RenderTransform>
                </Canvas>
            </Border>

            <!-- Right Panel -->
            <DockPanel Grid.Column="1" Margin="0,10,10,10">
                <!-- Saved Parcels Section -->
                <GroupBox DockPanel.Dock="Top" 
                         Header="Saved Parcels" 
                         Margin="0,0,0,10"
                         Padding="5">
                    <DataGrid x:Name="dataGridParcels" 
                            Height="200"
                            AutoGenerateColumns="True"
                            IsReadOnly="True"
                            SelectionMode="Single"
                            SelectionUnit="FullRow"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            HeadersVisibility="Column"/>
                </GroupBox>

                <!-- Layer Tree Section -->
                <GroupBox DockPanel.Dock="Top" 
                         Header="Layer Tree" 
                         Margin="0,0,0,10"
                         Padding="5">
                    <TreeView x:Name="treePolygons" 
                             Height="200"/>
                </GroupBox>

                <!-- Selected Features Section -->
                <GroupBox Header="Selected Feature Details" 
                         DockPanel.Dock="Top"
                         Padding="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Coordinates" 
                                 FontWeight="SemiBold" 
                                 Margin="0,0,0,5"/>
                        
                        <ListBox x:Name="listBoxFeatures" 
                                Grid.Row="1" 
                                Height="150"/>
                    </Grid>
                </GroupBox>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>
